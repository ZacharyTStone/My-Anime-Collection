{
  "name": "myanimecollection",
  "version": "1.0.1",
  "description": "A anime tracking application",
  "main": "Server/server.ts",
  "type": "module",
  "scripts": {
    "install-Client": "cd Client && npm install --include=dev",
    "install-Server": "npm install --include=dev",
    "build-Client": "cd Client && npm run build",
    "install-dependencies": "npm run install-Client && npm run install-Server",
    "heroku-postbuild": "npm run install-dependencies && npm run build-Client && tsc",
    "start-heroku-server": "node dist/server.js",
    "watch-scss": "sass --watch Client/src/assets/scss:Client/src/assets/css",
    "Server-local": "tsc && nodemon dist/server.js",
    "Client-local": "npm start --prefix Client",
    "start": "concurrently \"npm run Server-local\" \"npm run Client-local\" \"npm run watch-scss\""
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/dompurify": "^3.2.0",
    "@types/react-scroll": "^1.8.10",
    "@types/styled-components": "^5.1.34",
    "nodemon": "^2.0.22",
    "sass": "^1.87.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.10.0",
    "@types/cors": "^2.8.17",
    "axios": "^0.27.2",
    "babel-jest": "^26.6.0",
    "babel-plugin-react-compiler": "^19.0.0-beta-e552027-20250112",
    "bcryptjs": "^2.4.3",
    "concurrently": "^6.5.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.1.0",
    "express-rate-limit": "^6.0.4",
    "helmet": "^5.0.1",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "mongo-sanitize": "^1.1.0",
    "mongoose": "^6.12.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.22",
    "normalize.css": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.0.0",
    "react-helmet": "^6.1.0",
