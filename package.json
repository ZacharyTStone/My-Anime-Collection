{
  "name": "myanimecollection",
  "version": "1.0.1",
  "description": "A modern anime tracking application with playlist management",
  "main": "Server/server.ts",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\" \"npm run sass:watch\"",
    "server:dev": "tsc && nodemon dist/server.js",
    "client:dev": "npm start --prefix Client",
    "sass:watch": "sass --watch Client/src/assets/scss:Client/src/assets/css",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd Client && npm run build",
    "build:server": "tsc",
    "install:all": "npm run install:client && npm run install:server",
    "install:client": "cd Client && npm install --include=dev",
    "install:server": "npm install --include=dev",
    "start": "node dist/server.js",
    "heroku-postbuild": "npm run install:all && npm run build",
    "test": "npm run test:client && npm run test:server",
    "test:client": "cd Client && npm test",
    "test:server": "jest --config jest.config.js",
    "lint": "npm run lint:client && npm run lint:server",
    "lint:client": "cd Client && npm run lint",
    "lint:server": "eslint Server/**/*.ts",
    "type-check": "npm run type-check:client && npm run type-check:server",
    "type-check:client": "cd Client && npx tsc --noEmit",
    "type-check:server": "npx tsc --noEmit"
  },
  "keywords": [
    "anime",
    "tracking",
    "playlist",
    "react",
    "typescript",
    "nodejs",
    "express",
    "mongodb"
  ],
  "author": "Zachary Stone",
  "license": "MIT",
  "devDependencies": {
    "@types/dompurify": "^3.2.0",
    "@types/react-scroll": "^1.8.10",
    "@types/styled-components": "^5.1.34",
    "nodemon": "^2.0.22",
    "sass": "^1.87.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "@emotion/react": "^11.10.0",
    "@emotion/styled": "^11.10.0",
    "@mui/icons-material": "^5.8.4",
    "@mui/material": "^5.10.0",
    "@types/cors": "^2.8.17",
    "axios": "^0.27.2",
    "babel-jest": "^26.6.0",
    "babel-plugin-react-compiler": "^19.0.0-beta-e552027-20250112",
    "bcryptjs": "^2.4.3",
    "concurrently": "^6.5.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "express-mongo-sanitize": "^2.1.0",
    "express-rate-limit": "^6.0.4",
    "helmet": "^5.0.1",
    "http-status-codes": "^2.1.4",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "mongo-sanitize": "^1.1.0",
    "mongoose": "^6.12.0",
    "morgan": "^1.10.0",
    "normalize.css": "^8.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.0.0",
    "react-helmet": "^6.1.0",
    "react-icons": "^4.4.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "react-simply-carousel": "^8.3.5",
    "react-toastify": "^9.0.8",
    "styled-components": "^5.3.5",
    "uuid": "^9.0.1",
    "validator": "^13.7.0",
    "xss-clean": "^0.1.1"
  },
  "engines": {
    "node": "v20.12.1",
    "npm": "10.2.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ZacharyTStone/My-Anime-Collection.git"
  },
  "bugs": {
    "url": "https://github.com/ZacharyTStone/My-Anime-Collection/issues"
  },
  "homepage": "https://www.my-anime-collection.com"
}
