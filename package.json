    "react-simply-carousel": "^8.3.5",
    "react-toastify": "^9.0.8",
    "styled-components": "^5.3.5",
    "uuid": "^9.0.1",
    "validator": "^13.7.0",
    "xss-clean": "^0.1.1"
  },
  "engines": {
    "node": "v20.12.1",
    "npm": "10.2.3"
  }
}
